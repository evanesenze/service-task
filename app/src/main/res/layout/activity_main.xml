<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/progressText"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:layout_marginTop="132dp"
        android:text="@string/progressText"
        app:layout_constraintBottom_toTopOf="@+id/progressStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/progressStatus"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:text="@string/progressStatus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressText" />

    <Button
        android:id="@+id/startService"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="36dp"
        android:text="@string/startService"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/startIService"
        android:layout_width="153dp"
        android:layout_height="65dp"
        android:layout_marginStart="36dp"
        android:layout_marginBottom="36dp"
        android:text="@string/startIService"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>